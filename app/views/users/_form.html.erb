
    
   
<div class= "row">
  <div class="col-md-6 col-md-offset-3 ">
          <%= form_for @user do |f| %>
        <%= render 'shared/error_messages' %>
        <%= f.label :name %>
        <br>
        <%= f.text_field :name %>
        <br>
        <%= f.label :email %>
        <br>
        <%= f.text_field  :email %>
        <br> 
        <%= f.label :password %>
        <br>
        <%= f.password_field :password %>
        <br>
        <%= f.label :password_confirmation %>
        <br>
        <%= f.password_field :password_confirmation %>
        <br>
        <%=f.submit yield(:submit), class:'btn btn-primary'  %>
        <% end %>
    </div>
 </div>
