
<div class = "center">
<%= form_for @user, url:users_path do |f| %>
<%= f.label :name %>
<br>
<%= f.text_field  :name %>
<br>
<%= f.label :email %>
<br>
<%= f.text_field  :email %>
<br>
<%= f.label :password %>
<br>
<%= f.password_field :password %>
<br>
<%=f.label :admin  %>
<%=f.check_box :admin %>
<br>
<%= f.label :avatar %>
<%= f.file_field :avatar %>
<br>
<%= f.label :pics %>
<%= f.file_field :pics, multiple: 'true' %>
<br>
<br>
<%=f.submit  %>
<% end %>
</div>

