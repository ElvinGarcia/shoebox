  
   <div class= "row">
    <div class="col-md-6 col-md-offset-3 ">
    <fieldset>
      <legend>Login Form:</legend>          
      <%= form_tag "/login" do  %>
      <%=label_tag 'user[email]', "Email:" %>
      <br>
      <%= text_field_tag 'user[email]',"", placeholder:"eg. name@domain.com" %>
      <br>
      <%=label_tag 'user[password]', "Password:" %>  <%= link_to '(forgot password)', new_password_reset_path %> 
      <br>
      <%= password_field_tag 'user[password]',"", placeholder:"passsword"  %>
      <br>
      <%=label_tag :remember, "Stay signed in:" %>
      <%=check_box 'user','remember' %>
      <%= submit_tag :submit, class: "btn btn-primary"%>
      <br>
      <%= link_to '(new user ?)', new_user_path %>
      <% end %>
      </fieldset>
    </div>
  </div>

