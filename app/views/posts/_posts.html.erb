
<% current_user.posts.each do |post| %>
  <div class="card-body">
    <h3 class="card-title"> <%= post.date %> </h3>
    <p class="card-text"> <%= link_to post.description, post_path(post.id) %> </p> 
    <%if post.images.attached?  %>
      <% post.images.each do |image| %>
      <%= link_to image_tag(image.variant(resize: "100x100")), post_path(post.id) , class: "card-img" %> 
    <% end%>
    <% end%>
  </div>
<% end%>

