
<div class="field">

<%= form_for @post do |f| %>
<%= f.label :date  %>
<%= f.date_field :date, class: 'form-control' %>
<br>
<%= f.label :image %>
<%= f.file_field :image, multiple: true %>
<br>
<%= f.label :description %>
<%= f.text_area :description, class: 'form-control' %>
<%= f.submit %>
<% end %>

</div>

