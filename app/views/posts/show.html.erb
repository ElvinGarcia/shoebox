
<div class="show-post">
<p > <%= @post.description %> 
 <% @post.images.each do |img| %>
  <div class="img-box">
     <%= image_tag img.variant(resize: "200x200") %>
     <p class="small"> <%= link_to 'Download', rails_blob_path(img, disposition:"attachment") %> </p>
     </div>
     </p>
  <% end %>
 
</div>

<div class ="show-aside">
    <ul class="small">
        <h2>Menu</h2>
        <li> <%= link_to  'Create Post', new_post_path %></li>
        <li> <%= link_to  'Edit Post', edit_post_path(@post) %></li>
        <li> <%= link_to  'Delete  Post', post_path(@post), method: 'delete'  %></li>
        <li> <%= link_to  'Sort by Date', @post_path  %></li>
    </ul>
</div>
