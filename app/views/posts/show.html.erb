
<div class="show-post">
<p > <%= @post.description %> </p>
 <% @post.images.each do |img| %>
     <%= image_tag img.variant(resize: "200x200") %>
     <p> <%= link_to 'Download', rails_blob_path(img, disposition:"attachment"), class:"small" %> </p>
 <% end %>
</div>

<div class ="show-aside">
    <ul>
        <h2>Menu</h2>
        <li> <%= link_to  'Edit Post', @post_path %></li>
        <li> <%= link_to  'Delete Post', @post_path  %></li>
    </ul>
</div>
