<!DOCTYPE html>
<html>
  <head>
    <title>Shoebox</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul>
    <li><%= link_to 'Home', root_path %></li>
    <li><%= link_to 'Log Out', logout_path, method: :delete  if logged_in?%>
    </ul>
    
      <%= flash.notice unless nil %>
      <%= flash.alert unless nil %>
      <%# universal menu %>
      <% unless logged_in? %>  
      <ul>
        <li> <%= link_to  "Log-in", login_path%> </li>
        <li> <%= link_to "Sign Up", new_users_path %></li>
        <li> <%= link_to "Log-in with Github", "/auth/github/"%></li>
        <li> <%= link_to "Log-in with Google", "/auth/google_oauth2/"%></li>
      </ul>
      <% end %>
    <%= yield %>
  </body>
</html>
